    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/play-bot.ts",
            "args": [ "--bot=quantum", "--server=http://localhost:8080", "--games=10" ],
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/built/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "No Build Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/play-bot.ts",
            "args": [ "--bot=quantum", "--server=http://localhost:8080" ],
            "outFiles": [
                "${workspaceFolder}/built/**/*.js"
            ]
        }
 
    ]
}