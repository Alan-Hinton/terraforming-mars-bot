{
    "compilerOptions": {
      "lib": ["dom", "es2019"],
      "outDir": "./built",
      "target": "ES2022",
      "module": "CommonJS",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "sourceMap": true
    },
    "include": [
        "bots/**/*.ts",
        "models/**/*.ts",
        "terraforming-mars/src/common/**/*.ts",
        "play-bot.ts",
        "start-game.ts",
    ],
    "exclude": [
      "terraforming-mars/tests/**/*.ts",
      "terraforming-mars/src/server/**/*.ts",
      "terraforming-mars/src/client/**/*.ts",
    ],
  }